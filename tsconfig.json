{
	"compilerOptions": {
		"target": "es5",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./lib",
		"moduleResolution": "Node"
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*", "Examples"]
}
